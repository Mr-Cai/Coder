<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWrite"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_astronaut"
                    android:layout_width="600dp"
                    android:layout_height="600dp"
                    android:layout_gravity="center"
                    android:src="@drawable/animated_astronaut"/>

                <Button
                    android:id="@+id/btn_suprise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点我有惊喜^_^"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="trimPathEnd"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/image_bonc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/animated_bonc"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/image_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/animated_line_heart"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="pathData形状变化"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/image_smile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/animated_face_to_happy"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="fillColor颜色变化"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/image_redheart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/animated_red_heart_full"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="rotation旋转动画"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/image_windmill"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/animated_windmill"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="translate位移动画"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/image_moto"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/animated_motorcycle_show"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="scaleXY缩放动画"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/image_android"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/animated_android"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="alpha透明动画"
                    android:textSize="18sp"/>

                <ImageView
                    android:id="@+id/image_fingerprint"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/animated_fingerprint"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
